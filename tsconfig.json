{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If transpiling with TypeScript: */
    "module": "Preserve", // Preserve for tsup, ESNext for TypeScript

    "noEmit": true

    /* AND if your code doesn't require access to DOM API's (document, window, localstorage) */
    //   "lib": ["es2022"]
  },
  "include": ["src"],
  "exclude": ["tsup.config.ts"]
}
